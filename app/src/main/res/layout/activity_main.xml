<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            app:srcCompat="@mipmap/oir_logo_foreground" />

        <TextView
            android:id="@+id/TestLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OIR TEST APP"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/radioStatus"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_weight="12"
            android:text="idle"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bbcone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:onClick="playBBC_One"
                android:text="BBC One" />

            <Button
                android:id="@+id/bbctwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:onClick="playBBC_Two"
                android:text="BBC Two" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>